# editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.js]
indent_size = 2
indent_style = space
quote_type = single

[*.json]
indent_size = 2
indent_style = space

[*.css]
indent_size = 2
indent_style = space

[*.html]
indent_size = 2
indent_style = space
